<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39343c"
    tools:context=".MainActivity">


    <ListView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_carListView"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/llll"
         />

    <LinearLayout
        android:id="@+id/llll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_person"
            android:layout_weight="1"
            android:layout_margin="4dp"/>

        <ImageView
            android:id="@+id/menu_about_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_info_white_48dp"
            android:layout_weight="1"
            android:layout_margin="4dp"/>

        <ImageView
            android:id="@+id/menu_sort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_sort_by_size"
            android:layout_weight="1"
            android:layout_margin="4dp"/>

        <ImageView
            android:id="@+id/menu_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_loyalty_white_48dp"
            android:layout_weight="1"
            android:layout_margin="4dp"/>

    </LinearLayout>

</RelativeLayout>
