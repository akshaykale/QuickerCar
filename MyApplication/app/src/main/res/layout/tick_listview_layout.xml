<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:orientation="vertical"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_tick_que"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tb_create_post"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/abc_ic_menu_share_mtrl_alpha" />

            <TextView
                android:id="@+id/et_question_output"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:editable="false"
                android:paddingLeft="10dp"
                android:textColor="#fcf068"
                android:textColorHint="#a1a2a4"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_set_as" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#ff7373" />

        <ImageView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="100dp" android:scrollbars="none"
            android:background="#00ffffff" >

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#ff7373" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_below="@+id/shitll" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:src="@drawable/abc_ic_menu_share_mtrl_alpha" />

                <TextView
                    android:id="@+id/tv_ticka_tickcount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" android:layout_weight="1"
                    android:text="Tick Count: 117"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#a1a2a4" />

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="9dp"
                    android:src="@drawable/abc_ic_menu_share_mtrl_alpha" />
                
                <TextView
                    android:id="@+id/tv_ticka_cmnt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" android:layout_weight="1"
                    android:text="Comments:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#a1a2a4" />

                <ImageView
                    android:id="@+id/iv_expand_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:padding="8dp"
                    
                    android:src="@drawable/abc_ic_menu_share_mtrl_alpha" />

            </LinearLayout>
           
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>