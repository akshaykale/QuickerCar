<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/rounded_corners">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="2dp"
        >


        <ImageView
            android:id="@+id/iv_row_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/abc_ic_menu_share_mtrl_alpha" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="#ff00ad2d"
            >

            <ImageView
                android:id="@+id/iv_star_row"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_marginRight="15dp"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tv_row_stars"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_star_row"
                android:gravity="center_vertical"
                android:text="3.8"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="2dp"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"

        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_row_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Large Text"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_row_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Small Text"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_row_milage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Small Text"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

</LinearLayout>
